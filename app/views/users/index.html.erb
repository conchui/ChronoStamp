<div class="dash">  
  <% if current_user  %>
    <%= month_calendar events: @tracks do |date, track| %>
      <%= date.strftime('%e') %>
      <br>
      <% @holidays.each do |holiday| %>
        <% if date.to_s == holiday.holiday_date.to_s %>
          <span class="holiday">
            <%= "OT: "+holiday.holiday_name %></span>
        <% end %>
      <% end %>
      <% track.each do |event| %>
      <span class="attend">
        <%="IN  "+event.time_in %> <br>
        <%="OUT "+event.time_out %>
      </span>
      <% end %>
    <% end %>
  <% end %>
</div>

<table>
  <tr>
    <td class="project">
      <h5> Project/s </h5>
      <ul>
      <% @projects.each do |project| %>
        <li><%= link_to project.name, project_path(project.id) %></li>
      <% end %>
      </ul>
    </td>

    <td class="project">
      <h5> Task/s </h5>
      <ul>
      <% @tasks.each do |task| %>
        <li><%= link_to task.name, task_path(task.id) %></li>
      <% end %>
      </ul>
    </td>
  </tr>
</table>
