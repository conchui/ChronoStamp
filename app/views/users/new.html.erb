<div class="pass_reset">
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <strong><%= pluralize(@user.errors.count, "error") %> prohibited this project from being saved:</strong><br>
      <% @user.errors.full_messages.each do |msg| %>
        <%= msg %><br>
      <% end %>
    </div><br>
  <% end %>
 

  <h4>Sign Up</h4>
  <%= form_for(@user) do |f| %>
    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name %>
    </div><br>
    <div class="field">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name %>
    </div><br>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email %>
    </div><br>
    <div class="field">
      <%= f.label :password %><br>
      <%= f.password_field :password %>
    </div><br>
    <div class="field">
      <%= f.label :password_confirmation %><br>
      <%= f.password_field :password_confirmation %>
    </div><br>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
</div>