<% unless current_user.role_id == 3 %>
  <%= form_for @role, url: edit_users_path do |f| %>
    <div class="field">
      <%= f.label :first_name %><br>
      <%= f.text_field :first_name, disabled: true %>
    </div><br>
    <div class="field">
      <%= f.label :last_name %><br>
      <%= f.text_field :last_name, disabled: true %>
    </div><br>
    <div class="field">
      <%= f.label :email %><br>
      <%= f.text_field :email, disabled: true %>
    </div><br>
    <div class="field">
      <% if current_user.role_id == 1 %>
      <%= f.radio_button :role_id, 1 %> <%= f.label "moderator" %>
      <br>
      <% end %>
      <%= f.radio_button :role_id, 2 %> <%= f.label "manager" %>
      <br>
      <%= f.radio_button :role_id, 3 %> <%= f.label "user" %>
    </div><br>
    <div class="actions">
      <%= f.submit %>
    </div>
  <% end %>
<% end %>

