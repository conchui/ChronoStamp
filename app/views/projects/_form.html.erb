<h4>Project</h4>

<%= form_for(@project) do |f| %>
  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div><br>
  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div><br>
  <div class="field">
    <%= f.label :deadline %><br>
    <%= f.date_select :deadline %>
